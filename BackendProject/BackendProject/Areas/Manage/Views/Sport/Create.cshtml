@model SportOff
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Sport Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-controller="Sport" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" class="form-control">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc1">Desc1</label>
                    <input asp-for="Desc1" class="form-control">
                    <span class="text-danger" asp-validation-for="Desc1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc2">Desc2</label>
                    <textarea asp-for="Desc2" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Desc2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
